{
  "cli": {
    "version": ">= 15.0.14",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "android": {
        "buildType": "apk",
        "gradleCommand": ":app:assembleDebug" // <-- for dev only
      }
    },
    "preview": {
      "distribution": "internal",
      "android": {
        "buildType": "apk",
        "gradleCommand": ":app:assembleRelease" // <-- for QA/internal testing
      }
    },
    "production": {
      "autoIncrement": true,
      "android": {
        "buildType": "apk" // or "aab" if publishing to Play Store
      }
    }
  },
  "submit": {
    "production": {}
  }
}